<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
			<link href="{{ asset('style/header.css') }}" rel="stylesheet"/>
			<link href="{{ asset('style/sideMenu.css') }}" rel="stylesheet"/>
		{% endblock %}

	</head>
	<body>

		<div class="container-fluid p-0 d-flex">
			<div class="left">
				{% block sidemenu %}
					{% include "shared/sidemenu.html.twig" %}
				{% endblock %}
			</div>
			<div class="right">
				{% block header %}
					{% include "shared/header.html.twig" %}
				{% endblock %}

				<div class="row col-12 mx-0"> {% block content %}{% endblock %}
					</div>
				</div>
			</div>

			{% block body %}{% endblock %}
			{% block javascripts %}
				<script src="{{asset('style/header.js')}}"></script>
				{{ encore_entry_script_tags('app') }}
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
			{% endblock %}
		</body>
	</html>
